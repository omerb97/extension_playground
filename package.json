{
  "name": "secret-scanner",
  "displayName": "Secret Scanner",
  "description": "Detects hardcoded secrets, passwords, and API keys in your code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "secret-scanner",
          "title": "Secret Scanner",
          "icon": "$(shield)"
        }
      ]
    },
    "views": {
      "secret-scanner": [
        {
          "id": "secretScannerView",
          "name": "Detected Secrets",
          "icon": "$(shield)",
          "contextualTitle": "Secret Scanner"
        }
      ]
    },
    "commands": [
      {
        "command": "secret-scanner.scanWorkspace",
        "title": "Scan Workspace for Secrets",
        "icon": "$(refresh)"
      },
      {
        "command": "secret-scanner.refresh",
        "title": "Refresh Secret Scanner",
        "icon": "$(refresh)"
      },
      {
        "command": "secret-scanner.navigateToSecret",
        "title": "Navigate to Secret"
      },
      {
        "command": "secret-scanner.askCopilot",
        "title": "Ask Copilot About This Secret",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "secret-scanner.fixWithCopilot",
        "title": "Fix with Copilot",
        "icon": "$(tools)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "secret-scanner.refresh",
          "when": "view == secretScannerView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "secret-scanner.askCopilot",
          "when": "view == secretScannerView && viewItem == secretWarning",
          "group": "inline"
        },
        {
          "command": "secret-scanner.fixWithCopilot",
          "when": "view == secretScannerView && viewItem == secretWarning",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
